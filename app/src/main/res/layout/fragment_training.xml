<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnHome3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".Fragments.FragmentTraining">

    <TextView
        android:id="@+id/textViewV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="0.001"
        android:gravity="center"
        android:textStyle="bold"
        android:text="🏋🏼Choose your workout 🏋🏼"
        android:textSize="24sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar_vertical"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btnHome2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button_background"
        android:drawableTop="@drawable/btn_home1"
        android:padding="5dp"

        android:textSize="14sp" /> <!-- Adjust padding and text size here -->



</LinearLayout>
